{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "./",
  "entryFile": "src/main",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": ["protos/*.proto"],
    "webpack": true,
    "tsConfigPath": "apps/payment-service/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/payment-service",
  "projects": {
    "payment-service": {
      "type": "application",
      "root": "apps/payment-service",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/payment-service/tsconfig.app.json",
        "assets": ["protos/*.proto"],
        "watchAssets": true
      }
    },
    "orders-service": {
      "type": "application",
      "root": "apps/orders-service",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/orders-service/tsconfig.app.json",
        "assets": ["protos/*.proto"],
        "watchAssets": true
      }
    },
    "products-service": {
      "type": "application",
      "root": "apps/products-service",
      "entryFile": "src/main",
      "sourceRoot": "./",
      "compilerOptions": {
        "tsConfigPath": "apps/products-service/tsconfig.app.json",
        "assets": ["protos/*.proto"],
        "watchAssets": true
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}
